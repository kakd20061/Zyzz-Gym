@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<div class="login-area" style="margin-top:3em; margin-bottom:8em;">
    <div class="global-container">
        <div class="card login-form">
            <div class="card-body">
                <h1 class="card-title text-center">Login</h1>
                <center>
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-person-circle mt-3" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                </svg>
                </center>
                <div class="card-text">
                    <form class="loginform" id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" for="inputEmail">Email Adress</label>
                            <input asp-for="Input.Email" type="email"
                                   class="form-control form-control-sm"
                                   id="inputEmail" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" for="inputPassword">Password</label>
                            <input asp-for="Input.Password" type="password"
                                   class="form-control form-control-sm"
                                   id="inputPassword" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input text-light" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group text-center">
                        <button type="submit" class="loginbtn btn btn-danger btn-block">Log in</button>
                        </div>
                        <div class="signin">

                            Don't have an account? <a class="additional" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create one!</a>
                    </div>

                    </form>
                </div>
            </div>
        </div>
</div>
</div>

